            //- now authenticated user details are accessible to the client site (pug) also.   
        .wrapper
            .row
                nav.col-2
                    a(href="/") 
                        i.blue.fa-brands.fa-twitter
                    a(href="/") 
                        i.fa-solid.fa-house-chimney-window
                    a(href="/search") 
                        i.fa-solid.fa-magnifying-glass
                    a(href="/notifications") 
                        i.fa-solid.fa-bell
                    a(href="/messages") 
                        i.fa-solid.fa-envelope
                    a(href="/user") 
                        i.fa-solid.fa-user-large
                    a(href="/logout") 
                        i.fa-solid.fa-arrow-right-from-bracket

                .mainSectionContainer.col-10.col-md-8.col-lg-6
                    .titleContainer
                        h1 #{pageTitle}
                            
                    block content

                .d-none.d-md-block.col-md-2.col-lg-4


